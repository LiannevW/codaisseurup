<%= form_for @event do |f| %>

  <div class="form-group">
    <label>Event Name</label>
    <%= f.text_area :description, rows: 1, placeholder: "Give your event a name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>


  <label>Extras</label>
    <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>

  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>

  <div class="form-group">
    <label>Entry Price</label>
  <div class="input-group">

  <div class="input-group-addon">â‚¬</div>
    <%= f.number_field :price, placeholder: "eg. 10", class: "form-control" %>
  </div>

  <label>Capacity</label>
  <div class="input-group">
    <div class="input-group-addon">amount</div>
    <%= f.number_field :capacity, placeholder: "enter people", class: "form-control" %>
  </div>
  </div>

  <div class="form-group"> <!-- Date input -->
    <label class="control-label" for="date">Start-date</label>
    <%= f.number_field :starts_at, placeholder: "MM/DD/YYYY", class: "form-control" %>
  </div>

  <div class="form-group"> <!-- Date input -->
    <label class="control-label" for="date">End-date</label>
    <%= f.number_field :ends_at, placeholder: "MM/DD/YYYY", class: "form-control" %>
  </div>


  <label>Publish this event?</label>
  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
